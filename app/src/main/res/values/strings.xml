<resources>
    <string name="app_name">Assesment</string>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:listDivider">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/rain_blue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:buttonStyle">@style/button_assessment</item>

    </style>

    <style name="button_assessment" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/blue_button</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>
</resources>